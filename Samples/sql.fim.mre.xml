					<Target>accountname</Target>
				</AttributeFlowBase>
 				<AttributeFlowBase xsi:type="AttributeFlowAttribute">
					<Source>[MVObjectID]</Source>
					<Target>_id</Target>
				</AttributeFlowBase>
 				<AttributeFlowBase xsi:type="AttributeFlowAttribute">
					<Source>[MVObjectID]</Source>
					<Target>[DN]</Target>
				</AttributeFlowBase>

			</InitialFlows>
			
		</Rule>

	</Rules>
